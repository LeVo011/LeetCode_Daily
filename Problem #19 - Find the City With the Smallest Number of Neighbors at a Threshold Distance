#week 4 day 5

from typing import List

class Solution:
    def findTheCity(self, n: int, edges: List[List[int]], distanceThreshold: int) -> int:
        inf = float('inf')
        dist = [[inf] * n for _ in range(n)]
        for i in range(n):
            dist[i][i] = 0
            
        for u, v, w in edges:
            dist[u][v] = w
            dist[v][u] = w
            
        for k in range(n):
            for i in range(n):
                for j in range(n):
                    if dist[i][k] + dist[k][j] < dist[i][j]:
                        dist[i][j] = dist[i][k] + dist[k][j]
                        
        min_reachable_count = n  
        result_city = -1
        
        for i in range(n):
            current_reachable = 0
            for j in range(n):
                if i != j and dist[i][j] <= distanceThreshold:
                    current_reachable += 1
            
            if current_reachable <= min_reachable_count:
                min_reachable_count = current_reachable
                result_city = i
                
        return result_city
